{% extends 'layout.twig' %}

{% block content %}
  {% include 'message.twig' %}
  <div class="row">
    <div class="col-md-6 text-left">
        <h3>
          Все пользователи
        </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Имя</th>
            <th>E-mail</th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            <tr>
              <td>{{ user.name }}</td>
              <td>               
                  {{ user.email }}                
              </td>
              <td>
                <div class="btn-group">
                  <a type="button" data-toggle="dropdown" class="btn btn-link btn-sm dropdown-toggle">
                    {% if user.rights == "user" %}Пользователь{% else %}Администратор{% endif %} 
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <a href="actions/set_right.php?id={{ user.id }}">
                        Сделать 
                        {% if user.rights == "user" %}администратором{% else %}пользователем{% endif %} 
                      </a>
                    </li>
                  </ul>
                </div> 
              </td>

            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
    
{% endblock %}
