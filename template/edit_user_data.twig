{% extends('layout.html.twig') %}

{% block content %}

  <div class="container containerMenu my-4">
    <div class="row justify-content-start">
      <div class="menu col-6">
        <div class="imgMainName"></div>
      </div>
      <div class="col-4 my-4">
        <div class="row">
          <div class="col-sm-3">
            <button type="button" class="btn btn-danger  btn-block buttonRecord"
                    onclick="window.location = 'index.php'">Выйти</button>
          </div>
        </div>
      </div>
      <div class="col-2"></div>
    </div>
    {% include 'message.twig' %}
      <div class="row  my-4">
        <div class="col-md-12">
          <h2>Редактирование персональных данных</h2>
        </div>
        <div class="container containerMainPage">
          <div class="col-md-10">
          <div class="row">
            <div class="col-md-5 col-sm-12 col-xs-12">
              <h4>Основная информация</h4>
              <form action="actions/update_user.php" method="post" enctype="multipart/form-data">
                <div class="block_bottom_offset">
                  <input type="hidden" value=" {{ userId }}" name="userId">
                  <label for="username">Имя</label>
                  <input class="form-control" id="username" value="{{ user["Name"] }}" name="name"
                         autocomplete="off" required>
                </div>
                <div class="block_bottom_offset">
                  <label for="userEmail">E-mail</label>
                  <input class="form-control" id="userEmail" value="{{ user["email"] }}" name="email"
                         autocomplete="off" required>
                </div>
                <button type="submit" class="btn btn-info btn-sm btn-with-margin btnUser">
                  Обновить информацию
                </button>
              </form>
            </div>
            <div class="col-md-7 col-sm-12 col-xs-12">
              <h4>Смена пароля</h4>
              <form action="actions/update_pass.php" method="post" enctype="multipart/form-data">
                <div class="block_bottom_offset">
                  <label for="userOldPass">Старый пароль</label>
                  <input type="password" class="form-control" id="userOldPass" value="" name="oldPass"
                         placeholder="Старый пароль" required>
                </div>
                <div class="block_bottom_offset">
                  <label for="userNewPass1">Новый пароль</label>
                  <div class="row">
                    <div class="col-md-6 col-sm-6 block_bottom_offset">
                      <input type="password" class="form-control" id="userNewPass1" 
                      value="" name="pass1" placeholder="Новый пароль" required>
                    </div>
                    <div class="col-md-6 col-sm-6 block_bottom_offset">
                      <input type="password" class="form-control" id="userNewPass2" 
                      value="" name="pass2" placeholder="Повторите" required>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-info btn-sm btn-with-margin btnUser">
                  Обновить пароль
                </button>
              </form>
            </div>
           </div>
          </div>
        </div>
      </div>
  </div>

{% endblock %}
